/* Step 1: Convert character 'data_month' like 'DEC24' into numeric yyyymm format */
data ploc_prepped;
    set ploc_data;

    /* Convert 'DEC24' to '202412', 'JAN25' to '202501', etc. */
    sas_date = input('01' || strip(data_month), date9.);
    yyyymm = put(sas_date, yymmn6.);  /* Final desired YYYYMM format */
run;

/* Step 2: Sort by custid, account_no, and yyyymm for lag */
proc sort data=ploc_prepped;
    by custid account_no yyyymm;
run;

/* Step 3: Create cust-account summary with SOM and EOM */
data cust_account_summary;
    set ploc_prepped;
    by custid account_no;

    retain SOM_Balance;

    if first.account_no then SOM_Balance = 0;
    else SOM_Balance = lag(end_of_month_balance);

    EOM_Balance = end_of_month_balance;

    Month_Label = yyyymm;  /* Already in YYYYMM format */

    keep custid account_no Month_Label SOM_Balance EOM_Balance max_od_limit;
run;

/* Step 4: Final Output */
proc print data=cust_account_summary noobs;
    var custid account_no Month_Label SOM_Balance EOM_Balance max_od_limit;
run;













/* Step 1: Convert month to proper SAS date */
data ploc_prepped;
    set ploc_data;
    data_month_num = input('01' || strip(data_month), date9.);
    format data_month_num monyy7.;
run;

/* Step 2: Sort by custid, account_no, and month */
proc sort data=ploc_prepped;
    by custid account_no data_month_num;
run;

/* Step 3: Use LAG to create SOM_Balance from previous EOM_Balance */
data cust_account_summary;
    set ploc_prepped;
    by custid account_no;

    retain SOM_Balance;

    /* Use LAG only within same cust+account group */
    if first.account_no then SOM_Balance = 0;
    else SOM_Balance = lag(EOM_Balance);

    EOM_Balance = end_of_month_balance;
    Month_Label = put(data_month_num, monyy7.);
    
    keep custid account_no Month_Label SOM_Balance EOM_Balance max_od_limit;
run;

/* Optional: View or export the final structure */
proc print data=cust_account_summary noobs;
    var custid account_no Month_Label SOM_Balance EOM_Balance max_od_limit;
run;


















%macro export_loop;

    %let list = dataset1 dataset2;
    %let path = /your/network/path;

    %let i = 1;
    %do %while(%scan(&list, &i) ne );
        %let dsn = %scan(&list, &i);

        proc export data=&dsn
            outfile="&path/&dsn..xlsx"
            dbms=xlsx
            replace;
        run;

        %let i = %eval(&i + 1);
    %end;

%mend;

%export_loop;







%macro export_loop;
    %let list = dataset1 dataset2 dataset3;

    %let i = 1;
    %do %while(%scan(&list, &i) ne );
        %let dsn = %scan(&list, &i);
        proc export data=&dsn
            outfile="&dsn..xlsx"
            dbms=xlsx
            replace;
        run;
        %let i = %eval(&i + 1);
    %end;
%mend;

%export_loop;













