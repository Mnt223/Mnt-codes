data _null_;
   file mail;

   /* Start HTML */
   put '<html><body style="font-family: Arial, sans-serif; margin: 10px; font-size: 12px; color: #333;">';

   /* Report Header */
   put '<h2 style="color: #2cae50; border-bottom: 2px solid #3498db; font-size: 20px;">Non-Pega SMS File Report</h2>';

   /* Table Header */
