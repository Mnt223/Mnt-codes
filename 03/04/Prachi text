Selected_Metric = 
VAR SelectedValue = SELECTEDVALUE(MetricSelector[Metric Selection])
RETURN 
SWITCH(
    TRUE(),
    SelectedValue = "CASA Growth", SUM(YourTable[CASA_Growth]),
    SelectedValue = "TMD Growth", SUM(YourTable[TMD_Growth]),
