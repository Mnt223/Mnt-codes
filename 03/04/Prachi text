The Revolver at Risk Propensity Model is designed to identify heavy revolvers who are likely to transition into consistent transactors. It enables early detection of potential attrition within the revolve portfolio, supporting proactive retention strategies. By pinpointing customers showing signs of behavioral shift, the model helps mitigate interest income loss and enhances portfolio stability. This insight-driven approach ensures timely and targeted engagement with at-risk customers.










MTD_KPI_CardFormatted = 
VAR ContactTarget     = FORMAT(SUM(Activity_Mi[Contact Target]), "#,##0")
VAR TriggerAch        = FORMAT(SUM(Activity_Mi[Trigger_Ach]), "#,##0")
VAR TriggerAchStaff   = FORMAT(SUM(Activity_Mi[Trigger_Ach_staff]), "#,##0")

-- Add padding to align value column (adjust spaces to taste)
VAR Line1 = "👤 Contact Target       | " & ContactTarget
VAR Line2 = "✅ Trigger Achieved     | " & TriggerAch
VAR Line3 = "👥 Trigger Ach by Staff | " & TriggerAchStaff

-- Use Unicode solid line (─) that scales properly
VAR Separator = UNICHAR(10) & REPT(UNICHAR(9472), LEN(Line1)) & UNICHAR(10)

RETURN
Line1 & Separator &
Line2 & Separator &
Line3








MTD_KPI_Display_Clean = 
VAR ContactTarget     = FORMAT(SUM(Activity_Mi[Contact Target]),     "#,##0")
VAR TriggerAch        = FORMAT(SUM(Activity_Mi[Trigger_Ach]),        "#,##0")
VAR TriggerAchStaff   = FORMAT(SUM(Activity_Mi[Trigger_Ach_staff]), "#,##0")

// spacing to align values after colon
VAR Label1 = "👤 Contact Target      : "
VAR Label2 = "✅ Trigger Achieved    : "
VAR Label3 = "👥 Trigger Ach by Staff: "
VAR Divider = REPT(UNICHAR(9472), 38)  // horizontal line

RETURN
Label1 & ContactTarget & UNICHAR(10) &
Divider & UNICHAR(10) &
Label2 & TriggerAch & UNICHAR(10) &
Divider & UNICHAR(10) &
Label3 & TriggerAchStaff









MTD_KPI_Display = 
VAR ContactTarget = SUM(Activity_Mi[Contact Target])
VAR TriggerAch = SUM(Activity_Mi[Trigger_Ach])
VAR TriggerAchStaff = SUM(Activity_Mi[Trigger_Ach_staff])

RETURN
"👤 Contact Target: " & FORMAT(ContactTarget, "#,##0") & UNICHAR(10) &
"✅ Trigger Achieved: " & FORMAT(TriggerAch, "#,##0") & UNICHAR(10) &
"👥 Trigger Ach by Staff: " & FORMAT(TriggerAchStaff, "#,##0")

















DynamicRevenue = 
VAR SelectedMonths = DISTINCTCOUNT('DateTable'[YearMonth])
RETURN
    IF(
        ISFILTERED('DateTable'[YearMonth]) && SelectedMonths = 1,
        [MonthlyRevenue],  -- Use selection if one month
        IF(
            ISFILTERED('DateTable'[YearMonth]) && SelectedMonths > 1,
            [MonthlyRevenue],  -- Use total of selected months
            CALCULATE(         -- No filter: Show latest month
                [MonthlyRevenue],
                FILTER(
                    ALL('DateTable'),
                    'DateTable'[YearMonth] = [LatestMonth]
                )
            )
        )
    )












ShowDataFlag = 
VAR LatestMonth = CALCULATE(MAX('DateTable'[YearMonth]), ALL('DateTable'))
VAR CurrentMonth = MAX('DateTable'[YearMonth])  -- Must use aggregation for fact table context
RETURN
IF (
    ISFILTERED('DateTable'[YearMonth]),
        1,
    IF (CurrentMonth = LatestMonth, 1, 0)
)














ShowDataFlag = 
VAR LatestMonth = CALCULATE(MAX('DateTable'[YearMonth]), ALL('DateTable'))
VAR CurrentMonth = SELECTEDVALUE('DateTable'[YearMonth])
RETURN
IF (
    ISFILTERED('DateTable'[YearMonth]),
    1,
    IF (CurrentMonth = LatestMonth, 1, 0)
)










ShowDataFlag = 
VAR LatestMonth = CALCULATE(MAX('DateTable'[YearMonth]), ALL('DateTable'))
VAR CurrentMonth = MAX('DateTable'[YearMonth])
VAR IsMonthSelected = ISFILTERED('DateTable'[YearMonth])
RETURN
IF (
    IsMonthSelected,
    1,  // If slicer is used, show all selected months
    IF (CurrentMonth = LatestMonth, 1, 0)  // If no slicer, show only latest month
)








ShowDataFlag = 
VAR SelectedMonths = VALUES('DateTable'[YearMonth])
VAR LatestMonth = CALCULATE(MAX('DateTable'[YearMonth]), ALL('DateTable'))
VAR CurrentMonth = MAX('DateTable'[YearMonth])
RETURN
IF (
    ISFILTERED('DateTable'[YearMonth]),
    IF (
        CurrentMonth IN SelectedMonths,
        1,
        0
    ),
    IF (CurrentMonth = LatestMonth, 1, 0)
)











ShowDataFlag = 
VAR SelectedMonths = VALUES('DateTable'[YearMonth])
VAR LatestMonth = CALCULATE(MAX('DateTable'[YearMonth]), ALL('DateTable'))
VAR CurrentMonth = SELECTEDVALUE('DateTable'[YearMonth])
RETURN
IF (
    ISFILTERED('DateTable'[YearMonth]),
    IF (
        COUNTROWS(FILTER(SelectedMonths, [YearMonth] = CurrentMonth)) > 0,
        1,
        0
    ),
    IF (CurrentMonth = LatestMonth, 1, 0)
)










DateTable = 
CALENDAR ( MIN('YourData'[Date]), MAX('YourData'[Date]) )

LatestMonth = 
CALCULATE(
    MAX('YourData'[Date]),
    ALL('YourData')
)

LatestYearMonth = 
FORMAT(
    CALCULATE(MAX('YourData'[Date]), ALL('YourData')),
    "YYYYMM"
)

ShowDataFlag = 
VAR SelectedMonth = SELECTEDVALUE('DateTable'[YearMonth])
VAR LatestMonth = CALCULATE(MAX('DateTable'[YearMonth]), ALL('DateTable'))
RETURN
IF(
    ISFILTERED('DateTable'[YearMonth]),
    1, 
    IF(SelectedMonth = LatestMonth || ISBLANK(SelectedMonth), 1, 0)
)












MonthYearNum = YEAR('DateDim'[Date]) * 100 + MONTH('DateDim'[Date])





MonthName = FORMAT([Date], "MMM-YYYY")
IsLatestMonth = 
VAR MaxDate = CALCULATE(MAX('DateDim'[Date]), ALL('DateDim'))
RETURN IF(EOMONTH([Date], 0) = EOMONTH(MaxDate, 0), 1, 0)







DateDim = 
CALENDAR(
    MINX(UNION(
        SELECTCOLUMNS('Planner', "Date", 'Planner'[date]),
        SELECTCOLUMNS('Activity_Mi', "Date", 'Activity_Mi'[date]),
        SELECTCOLUMNS('Base file', "Date", 'Base file'[month_text])
    ), [Date]),

    MAXX(UNION(
        SELECTCOLUMNS('Planner', "Date", 'Planner'[date]),
        SELECTCOLUMNS('Activity_Mi', "Date", 'Activity_Mi'[date]),
        SELECTCOLUMNS('Base file', "Date", 'Base file'[month_text])
    ), [Date])
)












TotalRevenue_Smart = 
VAR _sel = SELECTEDVALUE(DateDim[Date])
VAR _latest = CALCULATE(MAX(DateDim[Date]), DateDim[IsLatestMonth] = 1)
VAR _final = IF(ISBLANK(_sel), _latest, _sel)

RETURN
CALCULATE(
    SUM(RevenueData[TotalRevenue]),
    FILTER(RevenueData, EOMONTH(RevenueData[MonthDate], 0) = EOMONTH(_final, 0))
)



IsLatestMonth = 
VAR MaxMonth = CALCULATE(MAX(DateDim[Date]), ALL(DateDim))
RETURN IF(EOMONTH(DateDim[Date], 0) = EOMONTH(MaxMonth, 0), 1, 0)

MonthLabel = 
VAR _sel = SELECTEDVALUE(DateDim[MonthName])
VAR _latest = CALCULATE(MAX(DateDim[MonthName]), DateDim[IsLatestMonth] = 1)
RETURN "Reporting for: " & IF(ISBLANK(_sel), _latest, _sel)

LatestOrSelectedMonth =
VAR SelectedDate = MAX('DateTable'[Date])
VAR SelectedMonthStart = STARTOFMONTH(SelectedDate)
VAR FinalMonthStart =
    IF(
        ISFILTERED('DateTable'[Month]) || ISFILTERED('DateTable'[Date]),
        SelectedMonthStart,
        CALCULATE(MAX('DateTable'[Date]), ALL('DateTable'))
    )
RETURN
CALCULATE(
    SUM(FactTable[Sales]),
    DATESINPERIOD('DateTable'[Date], FinalMonthStart, -1, MONTH)
)





LatestMonthValue =
VAR MaxDate = CALCULATE(MAX('DateTable'[Date]), ALL('DateTable'))
VAR MaxMonthStart = STARTOFMONTH(MaxDate)
RETURN
CALCULATE(
    SUM(FactTable[Sales]),
    DATESINPERIOD('DateTable'[Date], MaxDate, -1, MONTH)
)




LatestMonthValue =
VAR MaxMonth = CALCULATE(MAX('YourDataTable'[Month]), ALL('YourDataTable'))
RETURN
CALCULATE(SUM('YourDataTable'[Sales]), 'YourDataTable'[Month] = MaxMonth)





